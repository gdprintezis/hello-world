#include <stdio.h>

int main ()
{
   char name[200];
   int age;

   printf("Whats your name?\t");
   scanf("%s",name); //i let you read the doc to avoid overflow :)
   printf("How old are you?\t");
   scanf("%d",&age);
   printf("You are %d years old and your name is %s \n\n\n",age,name);
   printf("Hello %s \n",name);
   return 0;
}
